{{ 'my-section-banner.css' |  asset_url |  stylesheet_tag }}
<div class="my-announcement-bar">
    {% for announcement in section.blocks %}
    <div class="announcement-wrapper">
        
        <p class="announcement-text announcement-text--header">
            {{ announcement.settings.text |  escape }}
        </p>
        <p class="announcement-text announcement-text--subtext">
            {{ announcement.settings.subtext |  escape }}
        </p>
        
    </div>
    {% endfor %}
</div>
{% schema %}
{
    "name": "t:sections.my-announcement-bar.name",
    "max_blocks": 4,
    "class": "my-announcement-bar-section",
    "settings": [
        {
            "type": "header",
            "content": "t:sections.my-announcement-bar.settings.header__2.content"
        },
        {
            "type": "color_scheme",
            "id":"color_scheme",
            "label": "t:sections.all.colors.label",
            "default": "scheme-4"
        }
    ],
    "blocks": [
        {
            "type": "announcement",
            "name": "t:sections.my-announcement-bar.blocks.announcement.name",
            "settings": [
                {
                    "type": "text",
                    "id": "text",
                    "default": "Announcement for store",
                    "label": "t:sections.my-announcement-bar.blocks.announcement.settings.text.label"
                },
                {
                    "type": "text",
                    "id": "subtext",
                    "default": "This is a subtext",
                    "label": "t:sections.my-announcement-bar.blocks.announcement.settings.subtext.label"
                }
            ]
        }
    ],
    "presets": [
        {
        "name": "t:sections.announcement-bar.presets.name",
        "blocks": [
            {
            "type": "announcement"
            }
        ]
        }
    ]
}
{% endschema %}